<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".SocialMediaSmokeApplication">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" LQB "
        android:id="@+id/textLQB"
        android:textStyle="bold"
        android:textSize="100sp"
        android:fontFamily="@string/abc_action_bar_home_description"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=" Little Quit Buddy "
        android:textSize="35sp"
        android:id="@+id/textLittleQuitBuddy"
        android:textStyle="bold"
        android:textIsSelectable="false"
        android:textColor="#000000"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/textLQB"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:text="Log In "
        android:id="@+id/loginButton"
        android:layout_marginBottom="77dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:text="Sign In "
        android:id="@+id/signInButton"
        android:layout_alignTop="@+id/loginButton"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
