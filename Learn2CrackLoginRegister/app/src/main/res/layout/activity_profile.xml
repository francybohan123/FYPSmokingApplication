<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.learn2crack.ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="55dp"
                android:id="@+id/tv_name" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_email"
                android:layout_below="@+id/tv_name"
                android:layout_alignStart="@+id/tv_name" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_date"
                android:layout_below="@+id/tv_email"
                android:layout_centerHorizontal="true" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_dateofbirth"
                android:layout_below="@+id/tv_date"
                android:layout_alignStart="@+id/tv_date" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_dateofbirth"
                android:layout_alignStart="@+id/tv_dateofbirth"
                android:id="@+id/tv_dateofquittingsmoking" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_dateofquittingsmoking"
                android:layout_alignStart="@+id/tv_dateofquittingsmoking"
                android:id="@+id/tv_numbersmokedperday" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_numbersmokedperday"
                android:layout_alignStart="@+id/tv_numbersmokedperday"
                android:id="@+id/tv_numberperpacket" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_numberperpacket"
                android:layout_alignStart="@+id/tv_numberperpacket"
                android:id="@+id/tv_priceperpacket" />

            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/button_margin" />

            <android.support.v7.widget.CardView
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true">

            </android.support.v7.widget.CardView>

        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_exit"
        android:paddingLeft="@dimen/button_padding"
        android:text="Logout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_change_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_lock"
        android:paddingLeft="@dimen/button_padding"
        android:text="Change Password"
        android:layout_above="@+id/btn_logout"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Main Menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mBtMainMenu"
        android:layout_above="@+id/btn_change_password"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Chat Room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mBtchatRoom"
        android:layout_above="@+id/mBtMainMenu"
        android:layout_alignParentStart="true" />

</RelativeLayout>